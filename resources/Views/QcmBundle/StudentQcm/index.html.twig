{% extends "Layouts/base.html.twig" %}

{% block title %}Liste des QCMs{% endblock %}

{% block content %}
    <section class="qcm">
        <div class="container">
            <h1>Liste des QCMs</h1><br />

            {% if qcm == null %}
                Vous avez fait tous les QCMs.
            {% endif %}

            {% for qcm in qcms %}

                <a href="{{ path('student_qcm', 'get', {'id': qcm.id}) }}">
                    {% if loop.first %}
                        <div class="line line-first">
                    {% else %}
                        <div class="line">
                    {% endif %}
                    <h4 class="title">
                        {{ qcm.description }}
                    </h4>
                </div>
                </a>

            {% endfor %}
        </div>
    </section>

{% endblock %}