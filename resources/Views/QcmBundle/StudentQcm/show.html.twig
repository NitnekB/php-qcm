{% extends "Layouts/base.html.twig" %}

{% block title %}QCM : {{ qcm.description }}{% endblock %}

{% block content %}
    <section class="qcm">
        <div class="container">
            <h1>QCM : {{ qcm.description }}</h1><br />

            <h4> Question :<br /> {{ question.description }}</h4>

            <hr>
            <h4>RÃ©ponses</h4>

            {% for reply in question.replies %}
                <a href="{{ path('student_qcm_response', 'get', {'id': qcm.id, 'question_id': question.id, 'reply_id': reply.id}) }}">
                    {% if loop.first %}
                        <div class="line line-first">
                    {% else %}
                        <div class="line">
                    {% endif %}
                        <h4 class="title">
                            {{ reply.description }}
                        </h4>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}