{{ question.description }}<br /><br />

{% for reply in question.replies %}
    {{ reply.description }}<br />
{% endfor %}

<form action="{{ path(form.action, 'post', { 'topic_id': question.topic.id, 'question_id': question.id }) }}" method="post" class="base-form">
    {% for key, value in form.fields %}
        <label>{{ value.label }}</label><br />
        <input name="{{key}}" type="{{ value.type }}"/><br />
    {% endfor %}

    {% if form.submit %}
        <input type="submit" value="{{ form.submit.label }}"/>
    {% endif %}
</form>