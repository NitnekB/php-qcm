<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <link rel="stylesheet" href="{{ asset("css/style.css") }}" />
            <link rel="stylesheet" href="{{ asset("css/bootstrap.css") }}" />
            <title>{% block title %}{% endblock %} - QCM Eval</title>
        {% endblock %}
    </head>
    <body>
        <div id="header">
            <nav class="navbar navbar-custom container menu-top" role="navigation">

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a class="page-scroll" href="/">EvalQcm</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="">Les QCM</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="">Les questions</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="">Vos résultats</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if get_current_user() == null %}
                        <li>
                            <a class="page-scroll" href="{{ path('login') }}">Connexion</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="{{ path('register') }}">S'inscrire</a>
                        </li>
                        {% else %}
                            <li>
                                <a class="page-scroll" href="{{ path('logout') }}">Se déconnecter</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </div>

        {% block content %}{% endblock %}

        <footer class="clear">
            <div class="container">
                <div class="col-lg-offset-4 col-lg-4">
                <ul>
                    <li>
                        <a href="mailto:contact@UEFA.com">Contact</a>
                    </li>
                    <li>
                        <a href="/legales/reglement">Règlement</a>
                    </li>
                    <li>
                        <a href="/legales/sitemap">Sitemap</a>
                    </li>
                </ul>
                <p>
                    Copyright <a href="/">QCM Eval</a> &copy 2016. All rights reserved.
                </p>
                </div>
            </div>
        </footer>
    </body>
</html>

<script src="{{ asset("jss/bootstrap.js") }}"></script>
